                                </div>
                             
                             <div class="form-group">
                                <label for="nom">Nombre de personnes</label>


                            {{ form_widget(f.nbrperso, {'attr': {'class': 'form-control'}}) }}
                                       {{ form_errors(f.nbrperso, {'attr': {'class': 'text-danger'}}) }}

                                   </div>

                                   <div class="form-group">
                                <label for="nom">Choix Chambre</label>
                                    <tbody>
       <select name="choixch" id="choixch">
