    <option value="{{chambre.id}}">{{ chambre.type }},{{ chambre.logement }},{{ chambre.prix }} TND</option>
      

        
        {% endfor %}
        </select> 
        </tbody>
        </div>
                             <div hidden class="form-group">
                                <label for="nom">Id Chambre</label>


                            {{ form_widget(f.id_chambre, {'attr': {'class': 'form-control', 'value': 2}}) }}
                                       {{ form_errors(f.id_chambre, {'attr': {'class': 'text-danger'}}) }}

                                   </div>
                             <div hidden value="disabled" class="form-group" disabled>
                                <label hidden for="nom">Prix Total</label>


                            {{ form_widget(f.prixtotal, {'attr': {'class': 'form-control',  'value': 860     }}) }}
