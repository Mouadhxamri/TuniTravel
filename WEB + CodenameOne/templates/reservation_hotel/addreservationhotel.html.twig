{% block body %}

   
        
       
   

    {{ form_start(f, {attr: {novalidate: 'novalidate'}}) }}
 <td>
                                <a href="{{ path('reservationhotel_list') }}">
                                    <button type="button" class="btn btn-dark">Listes des Hotels!</button>                            </p>

                            </a>
                                    
                                    
                                <a href="{{ path('app_reservation_hotel') }}">
