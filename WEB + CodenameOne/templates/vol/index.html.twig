{% extends 'base.html.twig' %}

{% block title %}Liste des Vols{% endblock %}

{% block body %}
    <h1>Liste des Vols</h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                
                <th>Ref</th>
                <th>Depart</th>
                <th>Destination</th>
                <th>Date Depart</th>
                <th>Date Retour</th>
                <th>Prix</th>
                
            </tr>
        </thead>
        <tbody>
        {% for vol in vols %}
            <tr>
               
                <td>{{ vol.ref }}</td>
                <td>{{ vol.depart }}</td>
                <td>{{ vol.destination }}</td>
                <td>{{ vol.dateD ? vol.dateD|date('Y-m-d') : '' }}</td>
                <td>{{ vol.dateR ? vol.dateR|date('Y-m-d') : '' }}</td>
                <td>{{ vol.prixV }}</td>
                <td>
                    <a href="{{ path('app_vol_show', {'idVol': vol.idVol}) }}">
                    <i class="fa fa-search" aria-hidden="true" style="color:#888888;font-size:20px"></i></a></td>
                   
                 <td>   <a href="{{ path('app_vol_edit', {'idVol': vol.idVol}) }}">
                    <i class="fa fa-pencil" style="color:#3CB371;font-size:20px" ></i></a></td>
                     <td> {{ include('vol/_delete_form.html.twig') }}
                
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<td>
    <a href="{{ path('app_vol_new') }}" class="btn btn-success">
    Ajouter un Vol</a> </td>
    <td>
    <a class="btn btn-outline-warning"  href="{{ path('stat') }}">Statistiques des Vols</a>
    </td>
{% endblock %}
