{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="bg-picture card-box">
                                    
                                        <div class="profile-info-detail">
                                            <h3 class="m-t-0 mb-4">{{ user.nomClient }} {{ user.prenomClient }}</h3>

                                            <div class="row mt-4">
                                            <div class="col-sm-3 font-weight-bold">Adresse E-mail </div>
                                            <div class="col-sm-9">{{ user.email }}</div>
                                            </div>

                                            <div class="row mt-4">
                                            <div class="col-sm-3 font-weight-bold">CIN</div>
                                            <div class="col-sm-9">{{ user.cin }}</div>
                                            </div>

                                            <div class="row mt-4">
                                            <div class="col-sm-3 font-weight-bold">Numéro de Télephone</div>
                                            <div class="col-sm-9">{{ user.numtelClient }}</div>
                                            </div>

                                            <div class="row mt-4">
                                            <div class="col-sm-3 font-weight-bold">Numéro du Passport</div>
                                            <div class="col-sm-9">{{ user.numPassport }}</div>
                                            </div>

                                            <div class="row mt-4">
                                            <div class="col-sm-3 font-weight-bold">Datte de naissance</div>
                                            <div class="col-sm-9">{{ user.dattenClient ? user.dattenClient|date('d-m-Y') : '' }}</div>
                                            </div>

                                        </div>
                                </div>

                            </div>
                        </div>



    <a href="{{ path('app_user_index') }}">back to list</a>

    <a href="{{ path('app_user_edit', {'idUser': user.idUser}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
